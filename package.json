{
  "name": "@the_beard/ng2-img-max",
  "version": "2.3.1",
  "description": "Angular module to resize images down to a certain width and height or to reduce the quality to fit a certain maximal filesize - all in the browser.",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/oldschoolbg/ng2-img-max.git"
  },
  "license": "MIT",
  "main": "./dist/bundles/ng2-img-max.umd.js",
  "module": "./dist/ng2-img-max.js",
  "typings": "./dist/ng2-img-max.d.ts",
  "scripts": {
    "transpile": "ngc",
    "package": "rollup -c",
    "minify": "uglifyjs dist/bundles/ng2-img-max.umd.js --screw-ie8 --compress --mangle --comments --output dist/bundles/ng2-img-max.umd.min.js",
    "build": "npm run transpile && npm run package && npm run minify"
  },
  "author": {
    "name": "Andrew Cox",
    "email": "support@oldschool.site"
  },
  "keywords": [
    "angular",
    "angular2",
    "img-max",
    "maximal",
    "size",
    "limit",
    "resize"
  ],
  "dependencies": {
    "exifr": "^4.3.4",
    "ng2-pica": "^1.3.1"
  },
  "peerDependencies": {
    "core-js": ">=2.4.1"
  },
  "devDependencies": {
    "@angular/common": "^8.2.14",
    "@angular/compiler": "^8.2.14",
    "@angular/compiler-cli": "^8.2.14",
    "@angular/core": "^8.2.14",
    "@angular/platform-browser": "^8.2.14",
    "@angular/platform-browser-dynamic": "^8.2.14",
    "@angular/router": "^8.2.14",
    "@types/node": ">=7.0.5",
    "core-js": "^2.4.1",
    "reflect-metadata": "^0.1.3",
    "rollup": "^0.41.4",
    "rxjs": "^6.6.7",
    "tslint": "^4.4.2",
    "typescript": "3.5.3",
    "uglify-js": "^2.7.5",
    "zone.js": "^0.9.1"
  },
  "bugs": {
    "url": "https://github.com/bergben/ng2-img-max/issues"
  },
  "homepage": "https://github.com/bergben/ng2-img-max#readme"
}
